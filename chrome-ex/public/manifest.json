{
  "manifest_version": 3,
  "name": "Vocab",
  "author": "Iris",
  "version": "1.0.0",
  "description": "Vocabulary learning with Wikipedia - The app allows the user to search for Vocabulary and suggests fitting Wikipedia articles.",
  "action": {}, 
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/static/js/content.js"
      ]
    }
  ], 
  "icons": {
    "16": "icon16.ico",
    "48": "icon48.ico",
    "128": "icon128.ico"
  }, 
"permissions": [
    "tabs",
    "storage"
],
"web_accessible_resources": [{
  "resources": ["index.html", "/static/js/content.js" ],
  "matches": ["<all_urls>"],
  "extension_ids": ["kbjambaljfpmbadpgmclckcfolhpliea"]
}]
}