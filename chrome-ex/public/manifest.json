{
  "manifest_version": 3,
  "name": "Vocab",
  "author": "Iris",
  "version": "1.0.0",
  "description": "Vocabulary learning with Wikipedia - The app fetches Headlines and Google Searches and suggests fitting Wikipedia articles.",
  "action": {}, 
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/static/js/content.js"
      ]
    }
  ], 
"permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "storage",
    "identity",
    "notifications"
],
"web_accessible_resources": [{
  "resources": ["index.html", "/static/js/content.js" ],
  "matches": ["<all_urls>"],
  "extension_ids": ["kbjambaljfpmbadpgmclckcfolhpliea"]
}]
}